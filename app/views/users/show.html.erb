<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>
<p>the selected user has an id of <%= @user.id %> and a name of <%= @user.first_name %> <%= @user.last_name %></p>

	<div class="post_wrapper">
		<% @user.posts.all.reverse.each do |post| %>
			<div class="row align_posts">
			  <div class="col-md offset-md-4 post_container">
			  	<div class="post_content">
			  		<%= post.content %><br/>
		  		<small>
		  			Posted by
			  		<%= post.user.user_name %>
						<%= post.created_at.strftime("on %m/%d/%Y") %> 
						<%= post.created_at.strftime("at %I:%M%p") %>
					</small>

					<div class="comment_count">
						<%= link_to "Comments:#{post.comments.count}", post_path(post) %>
					</div>
			  	<div>
			  		<% if post.user.id == current_user.id %>
						<%= link_to "Edit Post", edit_post_path(post)  %>
						<%= link_to "Delete", post, method: :delete%>
						<%= link_to "Comments", post_path(post)%>
						<button class="submit_edit">Update</button>
					<% end %>	</div>
			  	</div>
				</div>  
			</div>
		<% end %>
	</div>
