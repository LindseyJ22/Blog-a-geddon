<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<% @posts.each do |post| %>

	<div class="post_container">
		<p>Subject: <%= post.title %></p>
		<p><%= post.content %></p>
		<%= link_to " Show", post %> 
		<%= link_to "Edit Post", edit_post_path(post) %>
		<%= link_to "Destroy", post, method: :delete%></div>
<% end %>
