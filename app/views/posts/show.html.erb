<h1>Posts#show</h1>

<div class="post_wrapper">
	<div class="row align_posts">
	  <div class="col-md offset-md-4 post_container">
	  	<div name="" class="post_content" cols="30" rows="10" readonly="true">
	  		<%= @post.content %>
				<p>
					<small>
						<%= @post.created_at.strftime("Posted by you on %m/%d/%Y") %> 
						<%= @post.created_at.strftime("at %I:%M%p") %>
					</small>
				</p>
	  	</div>
	  	<% if @post.user.id == current_user.id %>
				<%= link_to "Edit Post", edit_post_path(@post)  %>
				<%= link_to "Destroy", @post, method: :delete%>
			<% end %>	
		 </div>
	</div>
		<div class="new_post_container">
			<div class="new_post_form_wrapper">
				<%= form_with  model: Comment.new do |f| %>
						<div class="form-group new_post_content">
					  	<%= f.text_area :content, placeholder: 
					  	'What say you?', class: "form-control " %>
							<%= f.hidden_field :user_id, value: current_user.id %>
							<%= f.hidden_field :post_id, value: @post.id %>
							<%= f.submit class: "btn btn-primary post_submit" %>
						</div>
			<% end -%>
			<% @post.comments.each do |comment| %>
				<div id="comment_content">
					<%= comment.content %>
					<small>
		  			Posted by
			  		<%= comment.user.user_name %>
						<%= commment.created_at.strftime("on %m/%d/%Y") %> 
						<%= comment.created_at.strftime("at %I:%M%p") %>
					</small>
				</div>
			<% end %>
		</div>
	</div>
</div>